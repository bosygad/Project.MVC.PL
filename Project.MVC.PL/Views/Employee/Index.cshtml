@model IEnumerable<EmployeeDto>
@{
    ViewData["Title"] = "Employee";
}

<h1>All Employees</h1>

<br />
<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>

<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.Department)</th>

                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.EmployeeType)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.Gender)</th>




                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(E =>employee.Name)</td>
                    <td>@Html.DisplayFor(E =>employee.Email)</td>
                    <td>@Html.DisplayFor(E => employee.Department)</td>

                    <td>@Html.DisplayFor(E =>employee.Age)</td>
                    @* <td>@employee.Address</td> *@
                    <td>@Html.DisplayFor(E =>employee.Salary)</td>
                    <td>@Html.DisplayFor(E =>employee.EmployeeType)</td>
                    <td>@employee.IsActive</td>
                    <td>@Html.DisplayFor(E => employee.Gender)</td>
                    <partial name="_ButtonsPartial" model="@employee.Id" />
                    
                   @*  <td>

                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning"><i class="fa-solid fa-eye"></i> Details</a>

                    </td>
                    <td>

                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success"><i class="fa-solid fa-edit"></i> Update</a>

                    </td>
                    <td>

                        @* <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a> @

                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fa-solid fa-trash"></i> Delete
                        </button>
                    </td> *@
                </tr>
                <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Employee </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are You Dure to Delete this Employee
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" asp-route-id="@employee.Id" method="post">

                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h3>There is No Employees</h3>

    </div>
}
