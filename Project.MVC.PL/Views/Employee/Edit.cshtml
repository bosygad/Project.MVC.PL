@model EmployeeEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<section class=" row justify-content-center align-items-center">


    <h1 class="col-8 my-4">Edit Department</h1>
    <form asp-action="Edit" class="col-8">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="Age"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="Address"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="PhoneNumber"></label>
            <input type="tel" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>


        <div class="col-9 form-group mb-3">

            @*    <label class="form-label " asp-for="Gender"></label><br />
            @foreach(Gender genderOption in Enum.GetValues(typeof(Gender)))
            {
            <label class="ratio-inline" >
            <input type="radio" asp-for="Gender" value="@genderOption" />
            @genderOption
            </label>
            }
            *@
            <label class="form-label " asp-for="Gender"></label>
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                <option value="">Select Gender</option>
            </select>
            @*  <span asp-validation-for="Gender" class="text-danger"></span> *@
        </div>
        <div class="col-9 form-group mb-3">
            <label class="control-label " asp-for="EmployeeType"></label>
            @*  <input asp-for="EmployeeType" class="form-control" /> *@
            <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
                <option value="">Select Employee Type </option>
            </select>
            <span asp-validation-for="EmployeeType" class="text-danger"></span>
        </div>
        <div class="col-9 form-group mb-3">
            <input asp-for="IsActive" class="form-check-input mb-3" />
            <label class="form-check-label " asp-for="IsActive"></label>
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>


        <div class="col-9 form-group mb-3">
            <label class="form-label " asp-for="HiringDate"></label>
            <input type="date" asp-for="HiringDate" class="form-control" />

        </div>

       
     
        
       
        <div class="mt-4">
            <input type="submit" value="Save" class="btn btn-success" /> |
            <a asp-action="Index" class="btn btn-secondary"> Cancel</a>
        </div>
    </form>
</section>