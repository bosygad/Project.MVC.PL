@model EmployeeViewModel


<form asp-action="@ViewBag.Action" method="post" class="col-8">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-9 form-group mb-3">
        <label class="form-label " asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-9 form-group mb-3">
        <label class="form-label " asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="col-9 form-group mb-3">
        <label class="form-label " asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="col-9 form-group mb-3">
        <label class="form-label " asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="col-9 form-group mb-3">
        <label class="col-form-label " asp-for="PhoneNumber"></label>
        <input type="tel" asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="col-9 form-group mb-3">
        <label class="form-label " asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>


    <div class="col-9 form-group mb-3">

        <label class="control-label " asp-for="Gender"></label><br />
        @foreach (Gender genderOption in Enum.GetValues(typeof(Gender)))
        {
            <div class="form-check">
                <input type="radio" class="form-check-input" asp-for="Gender" value="@genderOption" />
                <label class="form-check-label" asp-for="Gender">
                    @genderOption
                </label>
            </div>
        }

        @*   <label class="form-label " asp-for="Gender"></label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
        <option value="">Select Gender</option>
        </select> *@
        @*  <span asp-validation-for="Gender" class="text-danger"></span> *@
    </div>
    <div class="col-9 form-group mb-3">
        <label class="control-label " asp-for="EmployeeType"></label><br />
        @foreach (EmployeeType employeeTypeOption in Enum.GetValues(typeof(EmployeeType)))
        {
            <div class="form-check">
                <input type="radio" class="form-check-input" asp-for="EmployeeType" value="@employeeTypeOption" />
                <label class="form-check-label" asp-for="EmployeeType">
                    @employeeTypeOption
                </label>
            </div>
        }
        @* <label class="control-label " asp-for="EmployeeType"></label>
        <input asp-for="EmployeeType" class="form-control" /> *@
        @*  <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
        <option value="">Choose...</option>
        </select>
        <span asp-validation-for="EmployeeType" class="text-danger"></span> *@
    </div>
    <div class="col-9 form-group mb-3">
        <input asp-for="IsActive" class="form-check-input mb-3" />
        <label class="form-check-label " asp-for="IsActive"></label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <div class="col-9 form-group mb-3">
        <label class="form-label " asp-for="HiringDate"></label>
        <input type="date" asp-for="HiringDate" class="form-control" />

    </div>
    @if (ViewBag.Action == "Create")
    {

        <div class="mt-4">
            <input type="submit" value="Create" class="btn btn-primary" /> |
            <a asp-action="Index" class="btn btn-secondary"> Back To List</a>
        </div>
    }
    else
    {

        <div class="mt-4">
            <input type="submit" value="Save" class="btn btn-success" /> |
            <a asp-action="Index" class="btn btn-secondary"> Back To List</a>
        </div>
    }
</form>
