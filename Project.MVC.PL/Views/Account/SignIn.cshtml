@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
			<div class="agileits-top">
				<form  asp-action="SignIn" >
					<div asp-validation-summary="ModelOnly"></div>
				
					<input class="text" asp-for="Email" type="email"  placeholder="Email" required="">
					<input class="text" asp-for="password" type="password" placeholder=" Password"  required=""/>
					
					<div class="wthree-text">
						<label class="anim">
							<input type="checkbox" asp-for="RememberMe" class="checkbox" required="">
							<span>Remember Me?</span>
						</label>
						<div class="clear"> </div>
					</div>
					<input type="submit" value="SIGNIN">
				</form>
				<p>If You Don't have an Account? <a asp-action ="SignUp"> Register Now!</a></p>
			</div>
		</div>

		@section ValidationScripts {

@* 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> *@
    <partial name="_ValidationScriptsPartial" />
}
